<h3>Show Post</h3>
<%= link_to @post.title, fix_url(@post.url) %>

<h5>Comments:</h5>

<%= form_for [@post, @comment] do |f|  %>
  <%= f.label :body, "Leave a comment" %>
  <%= f.text_area :body, rows: 5 %>
  <br/>
  <%= f.submit "Create Comment", class: 'btn btn-primary' %>
<% end %>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to '+', vote_post_path(comment, vote: true), method: 'comment'  if logged_in? %>
      [ <%= comment.total_votes %> ]
      <%= link_to '-', vote_post_path(comment, vote: false), method: 'comment' if logged_in? %>
      |
      <%= comment.body %> </li>
  <% end %>
</ul>